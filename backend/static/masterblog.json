{
  "openapi": "3.0.0",
  "info": {
    "title": "Master Blog API",
    "description": "A simple API for managing blog posts.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:5002"
    }
  ],
  "paths": {
    "/api/posts": {
      "get": {
        "summary": "Get all posts",
        "description": "Returns a list of all blog posts. Can be sorted by title or content.",
        "parameters": [
          {
            "name": "sort",
            "in": "query",
            "description": "Sort by 'title' or 'content'",
            "schema": {
              "type": "string",
              "enum": ["title", "content"]
            }
          },
          {
            "name": "direction",
            "in": "query",
            "description": "Sort direction 'asc' or 'desc'",
            "schema": {
              "type": "string",
              "enum": ["asc", "desc"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of posts.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Post"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new post",
        "description": "Creates a new blog post.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewPost"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "The created post.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Post"
                }
              }
            }
          }
        }
      }
    },
    "/api/posts/{post_id}": {
      "put": {
        "summary": "Update a post",
        "description": "Updates a blog post by its ID.",
        "parameters": [
          {
            "name": "post_id",
            "in": "path",
            "required": true,
            "description": "ID of the post to update.",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewPost"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "The updated post.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Post"
                }
              }
            }
          },
          "404": {
            "description": "Post not found."
          }
        }
      },
      "delete": {
        "summary": "Delete a post",
        "description": "Deletes a blog post by its ID.",
        "parameters": [
          {
            "name": "post_id",
            "in": "path",
            "required": true,
            "description": "ID of the post to delete.",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Post deleted successfully."
          },
          "404": {
            "description": "Post not found."
          }
        }
      }
    },
    "/api/posts/search": {
      "get": {
        "summary": "Search for posts",
        "description": "Searches for posts by title or content.",
        "parameters": [
          {
            "name": "title",
            "in": "query",
            "description": "Search by title.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "content",
            "in": "query",
            "description": "Search by content.",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of posts that match the search criteria.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Post"
                  }
                }
              }
            }
          },
          "404": {
            "description": "No search term provided."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Post": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "title": {
            "type": "string"
          },
          "content": {
            "type": "string"
          }
        }
      },
      "NewPost": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "content": {
            "type": "string"
          }
        }
      }
    }
  }
}